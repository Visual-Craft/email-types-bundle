    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "symfony/framework-bundle": "^4.4|^5.0",
        "symfony/mailer": "^4.4|^5.0",
        "symfony/options-resolver": "^4.4|^5.0",
        "symfony/twig-bridge": "^4.4|^5.0",
        "symfony/translation": "^4.4|^5.0"
    },
    "autoload": {
        "psr-4": {
            "VisualCraft\\EmailTypesBundle\\": "src/"
        }
    },
    "require-dev": {
